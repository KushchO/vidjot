{{#each errors}}
<div class="alert alert-danger" role="alert">
  {{text}}
</div>
{{else}}
{{/each}}
<div class="card card-body">
  <h3>Video Idea</h3>
  <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="text">Title</label>
      <input type="text" class="form-control" name="title" value={{#if idea.title}} {{idea.title}} {{/if}}>
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea name="details" class="form-control">{{#if idea.details}} {{idea.details}} {{/if}}</textarea>
    </div>
    <button class="btn btn-primary">Submit</button>
  </form>
</div>